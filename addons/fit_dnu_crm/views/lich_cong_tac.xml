<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_lich_cong_tac_form" model="ir.ui.view">
            <field name="name">lich_cong_tac</field>
            <field name="model">lich_cong_tac</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '=', False)], }">
                            Chỉnh sửa Lịch công tác
                        </div>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '!=', False)], }">
                            Tạo mới Lịch công tác
                        </div>
                        <div class="oe_read_only" style="font-size:25px">Lịch công tác</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ngay" />
                            <field name="thoi_gian_bat_dau" />
                            <field name="thoi_gian_ket_thuc"/>
                            <field name="noi_dung" />
                            <field name="thanh_phan" />
                            <field name="chu_tri" />
                            <field name="don_vi_thuc_hien" />
                            <field name="dia_diem" />
                            <field name="phu_trach" />
                            <field name="tuan_trong_nam" />
                            <field name="thu_int" />
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lich_cong_tac_tree" model="ir.ui.view">
            <field name="name">lich_cong_tac</field>
            <field name="model">lich_cong_tac</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ngay" />
                    <field name="thoi_gian_bat_dau" />
                    <field name="thoi_gian_ket_thuc"/>
                    <field name="noi_dung" />
                    <field name="thanh_phan" />
                    <field name="chu_tri" />
                    <field name="don_vi_thuc_hien" />
                    <field name="dia_diem" />
                    <field name="phu_trach" />
                    <field name="tuan_trong_nam" />
                    <field name="thu_int" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="lich_cong_tac_search">
            <field name="model">lich_cong_tac</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ngay" />
                    <field name="thoi_gian_bat_dau" />
                    <field name="thoi_gian_ket_thuc"/>
                    <field name="noi_dung" />
                    <field name="thanh_phan" />
                    <field name="chu_tri" />
                    <field name="don_vi_thuc_hien" />
                    <field name="dia_diem" />
                    <field name="phu_trach" />
                </search>
                
            </field>
        </record>

        <record id="action_lich_cong_tac" model="ir.actions.act_window">
            <field name="name">Lịch công tác</field>
            <field name="res_model">lich_cong_tac</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "lich_cong_tac_search"/>
        </record>

        
    </data>
</odoo>